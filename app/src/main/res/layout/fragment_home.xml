<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F7D9E3"
        tools:layout_editor_absoluteX="-12dp"
        tools:layout_editor_absoluteY="-182dp">

        <!-- TODO: Update blank fragment layout -->


        <Button
            android:id="@+id/button_rectangle"
            android:layout_width="152dp"
            android:layout_height="@dimen/height"
            android:layout_marginTop="20dp"
            android:background="@drawable/icon_rectangle"
            android:text="@string/rectangle"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            app:layout_constraintBottom_toTopOf="@+id/button_triangle"
            app:layout_constraintEnd_toStartOf="@+id/button_square"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_square"
            android:layout_width="139dp"
            android:layout_height="@dimen/height"
            android:layout_marginTop="20dp"
            android:background="@drawable/icon_square"
            android:text="@string/squre"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            app:layout_constraintBottom_toTopOf="@+id/button_circle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button_rectangle"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_triangle"
            android:layout_width="139dp"
            android:layout_height="@dimen/height"
            android:background="@drawable/icon_triangle"
            android:text="@string/triangle"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_circle"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_rectangle" />

        <Button
            android:id="@+id/button_circle"
            android:layout_width="138dp"
            android:layout_height="@dimen/height"
            android:background="@drawable/icon_circle"
            android:text="@string/circle"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button_triangle"
            app:layout_constraintTop_toBottomOf="@+id/button_square" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
