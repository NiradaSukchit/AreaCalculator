<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="81dp">
        <!-- TODO: Update blank fragment layout -->

        <ImageView
            android:id="@+id/image_squre"
            android:layout_width="299dp"
            android:layout_height="223dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/square"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/a_x_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="50dp"
            android:text="@string/a_x_a"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_squre" />

        <TextView
            android:id="@+id/text_equal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/equal"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/a_x_a"
            app:layout_constraintEnd_toStartOf="@+id/text_result"
            app:layout_constraintStart_toEndOf="@+id/a_x_a" />

        <TextView
            android:id="@+id/text_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="120dp"
            android:text="@string/result"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/text_equal"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/button_home"
            android:layout_width="155dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:text="@string/home"
            app:layout_constraintBaseline_toBaselineOf="@+id/button_clear"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/button_clear"
            android:layout_width="155dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="240dp"
            android:text="@string/clear"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_home"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/a_x_a" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>